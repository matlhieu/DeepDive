<?php
session_start();
date_default_timezone_set('Europe/Paris');


// Fonction pour obtenir l'API Key
function getAPIKey($vendeur)
{
	if(in_array($vendeur, array('MI-1_A', 'MI-1_B', 'MI-1_C', 'MI-1_D', 'MI-1_E', 'MI-1_F', 'MI-1_G', 'MI-1_H', 'MI-1_I', 'MI-1_J', 'MI-2_A', 'MI-2_B', 'MI-2_C', 'MI-2_D', 'MI-2_E', 'MI-2_F', 'MI-2_G', 'MI-2_H', 'MI-2_I', 'MI-2_J', 'MI-3_A', 'MI-3_B', 'MI-3_C', 'MI-3_D', 'MI-3_E', 'MI-3_F', 'MI-3_G', 'MI-3_H', 'MI-3_I', 'MI-3_J', 'MI-4_A', 'MI-4_B', 'MI-4_C', 'MI-4_D', 'MI-4_E', 'MI-4_F', 'MI-4_G', 'MI-4_H', 'MI-4_I', 'MI-4_J', 'MI-5_A', 'MI-5_B', 'MI-5_C', 'MI-5_D', 'MI-5_E', 'MI-5_F', 'MI-5_G', 'MI-5_H', 'MI-5_I', 'MI-5_J', 'MEF-1_A', 'MEF-1_B', 'MEF-1_C', 'MEF-1_D', 'MEF-1_E', 'MEF-1_F', 'MEF-1_G', 'MEF-1_H', 'MEF-1_I', 'MEF-1_J', 'MEF-2_A', 'MEF-2_B', 'MEF-2_C', 'MEF-2_D', 'MEF-2_E', 'MEF-2_F', 'MEF-2_G', 'MEF-2_H', 'MEF-2_I', 'MEF-2_J', 'MIM_A', 'MIM_B', 'MIM_C', 'MIM_D', 'MIM_E', 'MIM_F', 'MIM_G', 'MIM_H', 'MIM_I', 'MIM_J', 'SUPMECA_A', 'SUPMECA_B', 'SUPMECA_C', 'SUPMECA_D', 'SUPMECA_E', 'SUPMECA_F', 'SUPMECA_G', 'SUPMECA_H', 'SUPMECA_I', 'SUPMECA_J', 'TEST'))) {
		return substr(md5($vendeur), 1, 15);
	}
	return "zzzz";
}

// Récupération des données envoyées par CY Bank
$session_id = $_GET['session'] ?? '';
$transaction = $_GET['transaction'] ?? '';
$montant = $_GET['montant'] ?? '';
$vendeur = $_GET['vendeur'] ?? '';
$statut = $_GET['status'] ?? '';
$control_recu = $_GET['control'] ?? '';

// Vérifications de base
$erreur = '';
if (empty($transaction) || empty($montant) || empty($vendeur) || empty($statut) || empty($control_recu)) {
    $erreur = "Données de retour incomplètes.";
} else {
    $api_key = getAPIKey($vendeur);
    if ($api_key == "zzzz") {
        $erreur = "Vendeur non valide.";
    } else {
        $control_attendu = md5($api_key . "#" . $transaction . "#" . $montant . "#" . $vendeur . "#" . $statut . "#");

        if ($control_recu !== $control_attendu) {
            $erreur = "Échec de vérification : données falsifiées.";
        }
    }
}
?>

<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <title>Retour Paiement - DeepDive</title>
    <link rel="stylesheet" href="../style/nav_footer.css">
    <link rel="stylesheet" href="../style/login.css">
</head>

<body>

<header>
    <?php include("navbar.php"); ?>
</header>

<section class="connexion">
    <div class="overlay">
    <div class="confirmation" style="text-align: center; padding: 20px;">

        <?php if ($erreur): ?>
            <h1>❌ Échec du Paiement</h1>
            <p><?= htmlspecialchars($erreur) ?></p>
            <a href="recapitulatifv2.php">Retour au récapitulatif</a>
        <?php else: ?>
            <?php if ($statut === "accepted"): ?>
                <?php
                // Paiement accepté : Enregistrement de la commande
                

                if (!isset($_SESSION['voyage_en_cours'])) {
                    echo "<h1>Erreur : Aucune commande en cours trouvée.</h1>";
                } else {
                    // Récupérer les informations de la commande
                    $commande = $_SESSION['voyage_en_cours'];

                    // Ajouter l'email du client uniquement
                    if (isset($_SESSION['mail']) && !empty($_SESSION['mail'])) {
                        $commande['client_email'] = $_SESSION['mail'];
                    } else {
                        $commande['client_email'] = "email_inconnu@deepdive.cy";
                    }
                    // Ajouter les informations de paiement
                    $commande['statut_paiement'] = "accepté";
                    $commande['transaction'] = $transaction;
                    $commande['montant'] = $montant;

                    // Charger le fichier commandes existant
                    $fichier_commandes = "commande.json";

                    if (file_exists($fichier_commandes)) {
                        $commandes = json_decode(file_get_contents($fichier_commandes), true);
                    } else {
                        $commandes = [];
                    }

                    // Ajouter la nouvelle commande
                    $commandes[$transaction] = $commande;

                    // Sauvegarder toutes les commandes
                    file_put_contents($fichier_commandes, json_encode($commandes, JSON_PRETTY_PRINT));
                }
                ?>
                <h1>✅ Paiement accepté !</h1>
                <p>Merci pour votre réservation, votre commande a bien été enregistrée.</p>
                <a href="index.php">Retour à l'accueil</a>
            <?php else: ?>
                <h1>❌ Paiement refusé</h1>
                <p>Votre paiement n'a pas été validé.</p>
            
                    <a href="recherchev2.php">Modifier votre voyage</a>
                
            <?php endif; ?>
        <?php endif; ?>

    </div>
    </div>
</section>

<?php include("footer.php"); ?>

</body>
</html>
